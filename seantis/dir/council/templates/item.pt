<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.dir.council">
   
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <a tal:attributes="href python: context.get_parent().absolute_url() + '?reset=true'"><h1 class="documentFirstHeading" tal:content="python: context.get_parent().title" /></a>
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />
        
        <div id="directoryDetails" class="council-details">

            <h2>
                <tal:block content="context/title" />
            </h2>
            
            <div class="directoryInfoText">

              <div class="directoryInfoImage" tal:condition="context/image">
                  <img tal:replace="structure context/@@images/image/thumb" />
              </div>

              <div class="council-address">
                <ul>
                  <tal:block replace="structure context/address_lines" />
                </ul>
              </div>

              <div class="council-tags">
                <div tal:repeat="item python: view.tags().items()">
                  <h3 tal:content="python: item[0]"></h3>
                  <ul>
                    <tal:block repeat="tag python: item[1]">
                      <li>
                        <span tal:content="tag/value" class="council-tag-value"></span>
                        <div class="council-tag-description-block" tal:condition="tag/description">
                          <div tal:content="tag/description/description" class="council-tag-description"></div>
                          <a tal:condition="tag/description/url" tal:content="tag/description/url" tal:attributes="href tag/description/url" target="_blank" class="council-tag-url"></a>
                        </div>
                        <div class="visualClear"></div>
                      </li>
                    </tal:block>
                  </ul>
                </div>
              </div>
              
            </div>

        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>